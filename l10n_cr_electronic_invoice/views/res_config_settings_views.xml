<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_form_view_inherit" model="ir.ui.view">
        <field name="name">res.config.settings.views.form.fecrinherit</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">

            <block id="account_digitalization" position="after">
                    <block title="Valuation" name="config_import_bills">

                        <setting  >
                            <field name="module_import_bills" />
                        </setting>


                        <setting id="config_import_bills_accounts"
                                 title="Permitirá importar facturas de proveedores a partir de correos entrantes" >
                            <button name="open_params_import_ininvoice" icon="fa-arrow-right" type="object"
                                        string="Configure cuenta, diario e impuesto" class="btn-link"/>
                        </setting>

                    </block>
            </block>

            <setting id="smallest_coinage_currency" position="after">
                <div class="text-muted">
                            Permitirá mostrar campos adicionales en la factura de cliente y xml para envío a Hacienda
                </div>
                <field name="einvoice_fields_add"/>

            </setting>



        </field>
    </record>
</odoo>
